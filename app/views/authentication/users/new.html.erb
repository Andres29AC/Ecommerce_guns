<%= form_with(model: @user, html: { class: "flex justify-center items-center min-h-screen bg-gray-100" }) do |form| %>

  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">

    <!-- Mostrar errores -->
    <% @user.errors.full_messages.each do |error| %>
      <div class="text-red-600 text-sm mb-4">
        <%= error %>
      </div>
    <% end %>

    <div class="mb-6">
      <%= form.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.email_field :email, required: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div class="mb-6">
      <%= form.label :username, class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.text_field :username, required: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div class="mb-6">
      <%= form.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.password_field :password, required: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div>
      <%= form.submit "Registrarse", class: "w-full py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

  </div>
<% end %>
