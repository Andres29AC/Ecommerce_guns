<div id="<%= dom_id category %>" class="bg-white shadow-md rounded-lg p-8 max-w-md w-full mx-auto mb-6">
  <p class="text-lg font-semibold text-gray-800">
    <strong>Nombre:</strong> <%= category.name %>
  </p>

  <p class="text-sm text-gray-600 mt-2">
    <strong>Descripcion:</strong> <%= category.description %>
  </p>

  <div class="mt-4 flex space-x-4">
    <%= link_to edit_category_path(category), class: "text-blue-500 hover:text-blue-700 flex items-center space-x-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pencil-off">
        <path d="m10 10-6.157 6.162a2 2 0 0 0-.5.833l-1.322 4.36a.5.5 0 0 0 .622.624l4.358-1.323a2 2 0 0 0 .83-.5L14 13.982"/>
        <path d="m12.829 7.172 4.359-4.346a1 1 0 1 1 3.986 3.986l-4.353 4.353"/>
        <path d="m15 5 4 4"/>
        <path d="m2 2 20 20"/>
      </svg>
      <span><%= t('.edit') %></span>
    <% end %>

    <%= link_to category_path(category), data: { turbo_method: "delete", turbo_confirm: t('common.confirm') }, class: "text-red-500 hover:text-red-700 flex items-center space-x-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-2">
        <path d="M3 6h18"/>
        <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
        <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
        <line x1="10" x2="10" y1="11" y2="17"/>
        <line x1="14" x2="14" y1="11" y2="17"/>
      </svg>
      <span><%= t('.delete') %></span>
    <% end %>
  </div>
</div>
