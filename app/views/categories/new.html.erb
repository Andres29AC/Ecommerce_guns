<div class="max-w-3xl mx-auto px-4">
  <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">
    <%= t('.title') %>
  </h1>

  <%= render "form", category: @category %>

  <div class="mt-6 text-center">
    <%= link_to categories_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-all duration-300 ease-in-out transform hover:scale-105" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-corner-down-left mr-2">
        <polyline points="9 10 4 15 9 20"/>
        <path d="M20 4v7a4 4 0 0 1-4 4H4"/>
      </svg>
      <span><%= t('common.back') %></span>
    <% end %>
  </div>
</div>
