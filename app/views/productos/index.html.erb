<div style="background-image: url('<%= asset_path 'fondo1.jpg'%>'); background-size: cover;">
<div class="title">
   <h1 style="text-align: center;">Lista de Productos</h1>
</div>

<br>

<div class="count">
   <h2>Numero de productos:</h2>
   <div class="counter-products">
      <span><%= @productos.count %></span>
   </div>
</div>
<br>
<div class="producto-container">
   <% @productos.each do |producto| %>
      <%= link_to producto_path(producto.id), class: 'producto' do %>
         <div class="producto-item">
            <%= image_tag producto.photo,width:200 if producto.photo.attached? %>
            <h3><%= producto.titulo %></h3>
            <span>Precio: <%= producto.precio %>$</span>
         </div>
      <% end %>
   <% end %>
</div>
</div>
