<div class="image">
   <%= image_tag @producto.photo, width:500 if @producto.photo.attached? %>
</div>
<h1 class='titulo'><%= @producto.titulo %></h1>
<div class="info">
   <p><%= @producto.descripcion %></p>
   <span><%= @producto.precio %>$</span>
</div>
<br>
<div class="actions">
<button type="button" class="btn btn-link">
<%= link_to 'Editar Producto', edit_producto_path(@producto) if @producto.owner?%>
</button>
<button type="button" class="btn btn-link">
<%= link_to 'Eliminar Producto', producto_path(@producto), data:{
   turbo_method: "delete",
   turbo_confirm: t('common.confirn')
} if @producto.owner?%>
</button>
<button type="button" class="btn btn-link">
   <%= link_to t('.view_more_products',username: @producto.user.username), user_path(@producto.user.username) %>
</button>
<%= render partial: 'favorite', locals: {producto: @producto} %>
</div>

