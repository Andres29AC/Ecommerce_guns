<div class="bg-white flex justify-between items-center px-2" data-controller="menu">
  <%= link_to productos_path do %>
    <h1 class="text-2xl font-bold text-teal-500"><%= t('app_name') %></h1>
  <% end %>
  <button class="sm:hidden" data-action="click->menu#open">
    <%= image_tag 'icons/menu.svg',width: 35,height: 35 %>
  </button>
  <div class="hidden sm:block">
    <%= render partial: 'shared/items' %>
  </div>
  <!-- Menu for mobile -->
  <div class="gap-3 sm:hidden absolute bg-white top-0 right-0 shadow z-10 h-full flex flex-col min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-4 translate-x-full" data-menu-target="items">
    <button class="mb-4" data-action="click->menu#close">
      <%= image_tag 'icons/close.svg',width: 35,height: 35 %>
    </button>
    <%= render partial: 'shared/items' %>
  </div>
</div>
